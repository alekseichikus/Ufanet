<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1300dp"
            android:layout_height="1300dp"
            android:orientation="vertical"
            android:id="@+id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_figure"
                android:tint="#8e62ff"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/circle"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="-140dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="0dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/lock"
                    android:tint="#a1a4a5"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/rectangle"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-300dp"
                android:alpha=".3"
                android:layout_marginTop="180dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingRight="8dp"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/cv_close_button"
                app:cardElevation="0dp"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="#11ffffff">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_times_r"
                    android:alpha="0.7"
                    android:tint="#fff" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ll_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_weight="0.4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="27sp"
            android:textColor="#313435"
            android:fontFamily="@font/roboto_black"
            android:text="Bluetooth"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_posttitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="15sp"
            android:textColor="#a1a4a5"
            android:fontFamily="@font/roboto_regular"
            android:text="Bluetooth нам нужен для поиска устройства и для активации функции администрирования"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv_button"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="4dp"
            android:foreground="?android:selectableItemBackground"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#616465"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Предоставить доступ"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>