<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#a1a4a5"
                    android:text="Название конфига"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#f1f2f3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:layout_width="0px"
                            android:layout_height="0px" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:padding="16dp"
                            android:maxLength="64"
                            android:id="@+id/et_name_config"
                            android:textColor="#313435"
                            android:textColorHint="#616465"
                            android:background="@null"
                            android:text="Конфиг 23"
                            android:textSize="17dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#a1a4a5"
                    android:text="Функции"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Wiegand"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Опрос wiegand ключей"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_wiegand"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Dallas"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Опрос dallas ключей"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_dallas"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Gerkon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Опрос gerkon ключей"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_gerkon"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Bluetooth"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Сканер Bluetooth ключей"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_bluetooth"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Кнопка двери"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Опрос кнопки открытия двери"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_button"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Управление замком"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_lock"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Lock invert"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Инверсия управления замком"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_lock_invert"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Зумер при вскрытии"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Звуковое сопровождение при вскрытии"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_buzzer_case"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Зумер при срабатывании геркона"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Звуковое сопровождение при срабатывании геркона"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_buzzer_gerkon"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Зумер при обнаружении ключа"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Звуковое сопровождение при обнаружении ключа"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_buzzer_key"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#313435"
                            android:text="Зумер при открытии замка"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center_vertical"
                            android:textColor="#a1a4a5"
                            android:text="Звуковое сопровождение при открытии замка"/>
                    </LinearLayout>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sw_buzzer_lock"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#a1a4a5"
                    android:text="Работа со временем"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center_vertical"
                    android:textColor="#313435"
                    android:text="Время срабатывания замка"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#f1f2f3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:layout_width="0px"
                            android:layout_height="0px" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:padding="16dp"
                            android:maxLength="64"
                            android:id="@+id/et_time_open_lock"
                            android:inputType="number"
                            android:textColor="#313435"
                            android:text="4"
                            android:textColorHint="#616465"
                            android:background="@null"
                            android:textSize="17dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_save_button"
                    app:cardCornerRadius="4dp"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e62ff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#fff"
                            android:text="Сохранить"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>