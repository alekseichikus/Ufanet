<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners_shape"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="6dp"
            app:cardBackgroundColor="#e1e4e5"
            app:cardElevation="0dp"
            app:cardCornerRadius="3dp"/>
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_bluetooth_disconnect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#313435"
            android:text="А где ваш Bluetooth?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:id="@+id/tv_info"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#313435"
            android:text="Предоставить доступ к bluetooth"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:id="@+id/cv_request_button"
            app:cardCornerRadius="4dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8e62ff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#fff"
                    android:text="Разрешить доступ"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>