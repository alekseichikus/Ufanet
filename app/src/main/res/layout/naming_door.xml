<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Устройство"
            android:layout_centerVertical="true"
            android:textColor="#313445"
            android:id="@+id/title"
            android:fontFamily="@font/roboto_black"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title"
            android:layout_marginLeft="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f7f8f9"
                app:cardElevation="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="4dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:maxWidth="100dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="ИБ-316"
                        android:id="@+id/name_item"
                        android:layout_gravity="center_vertical"
                        android:textColor="#616465"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="13sp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#e1e4e5"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_microchip"
                            android:tint="#b1b4b5" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назовите свой скуд"
        android:textColor="#a1a4a5"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="13sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/invite_link_block"
        android:layout_marginRight="16dp"
        app:cardElevation="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#f1f2f3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:padding="16dp"
                    android:maxLength="32"
                    android:id="@+id/name_device"
                    android:text=""
                    android:hint="Например, мой дом ул. Ленина"
                    android:textColor="#616465"
                    android:textColorHint="#616465"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@null"
                    android:textSize="17dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/add_button"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:padding="16dp"
            android:background="#8e62ff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#fff"
                android:text="Добавить"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>