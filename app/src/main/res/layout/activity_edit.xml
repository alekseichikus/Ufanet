<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingRight="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/cv_close_button"
            app:cardElevation="0dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_arrow_left_r"
                android:tint="#a1a4a5"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="24sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_black"
            android:layout_gravity="center_vertical"
            android:textColor="#313435"
            android:text="Настройка устройства"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#a1a4a5"
                    android:text="Аутентификация"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center_vertical"
                    android:textColor="#313435"
                    android:text="Логин"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#f1f2f3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:layout_width="0px"
                            android:layout_height="0px" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:padding="16dp"
                            android:maxLength="64"
                            android:id="@+id/et_login"
                            android:textColor="#313435"
                            android:textColorHint="#616465"
                            android:background="@null"
                            android:textSize="17dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center_vertical"
                    android:textColor="#313435"
                    android:text="Пароль"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#f1f2f3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:layout_width="0px"
                            android:layout_height="0px" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:padding="16dp"
                            android:maxLength="64"
                            android:id="@+id/et_password"
                            android:textColor="#313435"
                            android:textColorHint="#616465"
                            android:background="@null"
                            android:textSize="17dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#e1e4e5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#a1a4a5"
                    android:text="Выделение конфигов"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:id="@+id/list"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:id="@+id/cv_add_slave_button"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:foreground="?android:selectableItemBackground"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1e4e5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Добавить устройство"
                        android:textColor="#616465"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:id="@+id/cv_save_button"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:foreground="?android:selectableItemBackground"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8e62ff">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#fff"
                        android:text="Сохранить"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>