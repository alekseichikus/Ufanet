<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingRight="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/cv_close_button"
            app:cardElevation="0dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_arrow_left_r"
                android:tint="#a1a4a5"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_black"
            android:layout_gravity="center_vertical"
            android:textColor="#313435"
            android:text="Настройки"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Настройка устройства"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_setting_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_cog_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Настроить устройство"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Конфигерация"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_add_config_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_plus_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Создать новый конфиг"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_config_list_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_archive_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Мой список конфигов"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Работа с ключами"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_add_key_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_plus_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Добавить ключ"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_keys_list_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_key_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Мой список ключей"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Обновление программного обеспечения"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_update_device_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_upload_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Обновить устройство"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Перезагрузка"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/cv_reload_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#e9ebec">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#d9dbdc">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_sync"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Перезагрузить устройство"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>