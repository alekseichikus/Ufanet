<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_setting_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafbfc">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#e7e8e9">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_cog_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_horizontal"
                            android:text="Настроить устройство"
                            android:textSize="17sp"
                            android:layout_marginBottom="32dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Конфигурация"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_add_config_button"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#d9dbdc">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#fafbfc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="16dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="25dp"
                                app:cardBackgroundColor="#e7e8e9">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_plus_r"
                                    android:layout_gravity="center"
                                    android:tint="#616465"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_horizontal"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginBottom="16dp"
                                android:maxLines="1"
                                android:text="Создать конфиг"
                                android:textSize="16dp"
                                android:textColor="#616465"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_config_list_button"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#d9dbdc">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#fafbfc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp"
                                android:padding="16dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="25dp"
                                app:cardBackgroundColor="#e7e8e9">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_archive_r"
                                    android:layout_gravity="center"
                                    android:tint="#616465"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="16dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                android:text="Список конфигов"
                                android:textSize="16dp"
                                android:textColor="#616465"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:text="Ключи"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_add_key_button"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#d9dbdc">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#fafbfc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp"
                                android:padding="16dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center_horizontal"
                                app:cardCornerRadius="25dp"
                                app:cardBackgroundColor="#e9ebec">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_plus_r"
                                    android:layout_gravity="center"
                                    android:tint="#616465"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Добавить ключ"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                android:textSize="16dp"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="16dp"
                                android:textColor="#616465"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_keys_list_button"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#d9dbdc">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:padding="16dp"
                        app:cardElevation="0dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#fafbfc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal"
                                android:padding="16dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="25dp"
                                app:cardBackgroundColor="#e9ebec">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_key_r"
                                    android:layout_gravity="center"
                                    android:tint="#616465"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Список ключей"
                                android:maxLines="1"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:textSize="16dp"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="16dp"
                                android:textColor="#616465"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#a1a4a5"
                android:gravity="center_horizontal"
                android:text="Обновление ПО"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:id="@+id/cv_update_device_button"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#d9dbdc">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="16dp"
                    app:cardElevation="0dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#fafbfc">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="16dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="#e9ebec">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_upload_r"
                                android:layout_gravity="center"
                                android:tint="#616465"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Обновить устройство"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="32dp"
                            android:textSize="16dp"
                            android:textColor="#616465"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>